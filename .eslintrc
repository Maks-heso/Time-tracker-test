{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["standard", "standard-react"],
  "globals": {},
  "plugins": ["react"],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "indent": [2, 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "config",
        "args": "after-used",
        "vars": "all"
      }
    ],
    "arrow-parens": ["error", "as-needed"],
    "camelcase": "warn",
    "vars-on-top": 1,
    "no-console": 0,
    "react/prop-types": 0,
    "no-useless-escape": 0,
    "react/jsx-closing-bracket-location": [1, {"selfClosing": "line-aligned", "nonEmpty": "after-props"}]
  }
}